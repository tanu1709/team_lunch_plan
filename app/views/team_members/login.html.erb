<div class="card text-center manager-add-container">
  <div class="card-header">
    <h4>Team Members login</h4>
  </div>
  <div class="card-body">
    <%= form_tag("/team_members/validate", method: "get") do %>
        <b><%= label_tag(:email, "Email:") %></b>
        <%= text_field_tag(:email, nil, placeholder: 'Enter Email') %>
        </br>
        </br>
        <b><%= label_tag(:psw, "Password:") %></b>
        <%= password_field_tag(:psw, nil , placeholder: 'Enter password') %>
        </br>
        </br>
        <%= submit_tag("Login", class: "login_button", :onclick => "validate()")  %>
    <% end %>
  </div>
  <div class="card-footer text-muted">

  </div>
</div>